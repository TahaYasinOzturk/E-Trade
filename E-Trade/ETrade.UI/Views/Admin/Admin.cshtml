@model IEnumerable<ETrade.DTO.FoodsDTO>

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Admin</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodName)
                </td>
                
                <td>
                        @Html.ActionLink("Update", "Update", new { id=item.FoodId  }) |
                        @Html.ActionLink("Details", "Details", new { id=item.FoodId }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.FoodId })
                </td>
            </tr>
        }
    </tbody>
</table>
